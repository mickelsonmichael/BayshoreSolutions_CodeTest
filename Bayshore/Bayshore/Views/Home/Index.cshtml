@{
    ViewData["Title"] = "Michael Mickelson - Pallindrome Checker";
}

<div class="row">
    <div class="col-sm-4 offset-sm-4">
        <h1>Michael Mickelson</h1>
        <p class="text-muted">
            Please implement a function that checks whether a positive number is a palindrome or not. For
            example, 121 is a palindrome, but 123 is not.
        </p>
        <div class="card">
            <div class="card-body">
                <label for="number">Number</label>
                <input type="number" min="1" max="@long.MaxValue" 
                       id="number" 
                       name="number" 
                       class="form-control"
                       data-url="@Url.Action("CheckPalindrome")" />

                <hr />
                <div id="message" class="alert alert-info" data-default="Waiting for Number...">
                    Waiting for Number...
                </div>
            </div>
        </div>
    </div>
</div>